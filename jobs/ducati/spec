templates:
  ducatid_ctl.erb: bin/ducatid_ctl
  10-bridge.conf.erb: cni-conf/10-bridge.conf
  20-vxlan.conf.erb: cni-conf/20-vxlan.conf

packages:
  - ducati
  - utils

properties:
  ducati.daemon.listen_address:
    description: "Host and port where the ducati daemon will serve its API"
    default: 0.0.0.0:4001

  ducati.daemon.local_subnet:
    description: "Subnet used by the local daemon overlay network addresses"
    default: 192.168.${index}.0/24

  ducati.daemon.overlay_network:
    description: "Subnet reserved for the overlay network. This should include daemon local subnet addresses"
    default: 192.168.0.0/16
