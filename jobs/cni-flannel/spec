  flannel.etcd_endpoints:
    description: "a list of etcd endpoints"
    default: []

  cni-flannel.adapter.cni_plugin_dir:
    description: "Directory containing CNI plugins"
    default: /var/vcap/packages/runc-cni/bin

  cni-flannel.adapter.cni_config_dir:
    description: "Directory containing CNI configuration files"
    default: /var/vcap/jobs/cni-flannel/config/cni

  cni-flannel.adapter.bind_mount_dir:
    description: "The CNI adapter will bind-mount network namespaces in this directory"
    default: /var/vcap/data/cni-flannel/container-netns

  cni-flannel.adapter.log_dir:
    description: "The CNI adapter will drop logs here"
    default: /var/vcap/sys/log/cni-flannel/adapter
